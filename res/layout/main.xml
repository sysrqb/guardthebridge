<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<TextView
  		android:id="@+id/directions"
  		android:layout_width="match_parent"
  		android:layout_weight="1"
  		android:text="@string/directions"
  	/>
  	<TextView
  		android:id="@+id/netidtext"
  		android:layout_width="match_parent"
  		android:layout_weight="1"
  		android:text="@string/netidtext"
  	/>
  	<EditText android:id="@+id/netid" android:layout_width="match_parent"
		android:layout_weight="1"
	/>
	<TextView
  		android:id="@+id/authtext"
  		android:layout_width="wrap_content"
  		android:layout_weight="1"
  		android:text="@string/authtext"
  	/>
  	<EditText android:id="@+id/authkey" android:layout_width="match_parent"
		android:layout_weight="1"
	/>
	<TextView
  		android:id="@+id/carnum"
  		android:layout_width="wrap_content"
  		android:layout_weight="1"
  		android:text="@string/carnum"
  	/>
  	<TextView
  		android:id="@+id/showcarnum"
  		android:layout_width="wrap_content"
  		android:layout_weight="1"
  		android:text="@string/showcarnum"
  	/>
  	<Button android:id="@+id/login"
  		android:text="@string/login"
  		android:layout_height="wrap_content"
  		android:layout_width="wrap_content"
  	/>
</LinearLayout>  		